{
    "name": "gradel",
    "version": "2.08.06",
    "description": "Programa de gesti√≥n de calificaciones",
    "author": "Gradel Raccoon Team",
    "private": true,
    "main": "electron/main.js",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "serve": "php artisan serve",
        "electron:dev": "concurrently \"npm run serve\" \"wait-on http://localhost:8000 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.gradel.app",
        "productName": "Gradel",
        "directories": {    
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "electron/resources/views/assets/icono.ico"
        }
    },
    "devDependencies": {
        "autoprefixer": "^10.4.17",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "electron": "^29.1.0",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9",
        "laravel-vite-plugin": "^1.2.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "vite": "^6.0.11",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "better-sqlite3": "^11.10.0",
        "sqlite": "^5.1.1",
        "sqlite3": "^5.1.6"
    }
}
